<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".Main2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/color_17181a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的"
                android:textColor="@color/colo_fff"
                android:textSize="@dimen/sp_19" />
        </android.support.v7.widget.Toolbar>
        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/message"
            android:id="@+id/imgs"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">
        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_17"
            android:id="@+id/img5"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:layout_toRightOf="@id/img5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Asyllabear"
            android:textColor="@color/colo_fff"
            android:id="@+id/tv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="厉害厉害厉害了我的哥"
            android:layout_toRightOf="@id/img5"
            android:layout_below="@id/tv"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colo_bbb"
            />
        <ImageView
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_140">
        <ImageView
            android:layout_width="@dimen/dp_345"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_140"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/bg_number_default"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的米粒"
            android:textSize="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:textColor="@color/color_f1f1f1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="875"
            android:id="@+id/tva"
            android:textColor="@color/colo_fff"
            android:textSize="@dimen/dp_65"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="米粒"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colo_fff"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_toRightOf="@id/tva"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情>>"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/colo_fff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@drawable/squal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="我的问答"
                android:textColor="@color/colo_fff"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:src="@mipmap/comment_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_32"

            android:background="@drawable/squal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="我的收藏"
                android:textColor="@color/colo_fff"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15" />

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:src="@mipmap/comment_icon" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/dp_180"
            android:background="@drawable/squal"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_32">
            <TextView
                android:layout_width="wrap_content"
                android:text="已购旅程"
                android:textSize="@dimen/sp_17"
                android:id="@+id/name1"
                android:textColor="@color/colo_fff"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_below="@id/name1"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/buy_journey_icons"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_180"
            android:background="@drawable/squal"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_32">
            <TextView
                android:layout_width="wrap_content"
                android:text="联系客服"
                android:textSize="@dimen/sp_17"
                android:id="@+id/na"
                android:textColor="@color/colo_fff"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_below="@id/na"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/comment_icon"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/dp_180"
            android:background="@drawable/squal"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_32">
            <TextView
                android:layout_width="wrap_content"
                android:text="检测最新版"
                android:textSize="@dimen/sp_17"
                android:id="@+id/name2"
                android:textColor="@color/colo_fff"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_below="@id/name2"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/buy_journey_icons"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_180"
            android:background="@drawable/squal"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_32">
            <TextView
                android:layout_width="wrap_content"
                android:text="赞扬/吐槽"
                android:textSize="@dimen/sp_17"
                android:id="@+id/nam"
                android:textColor="@color/colo_fff"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_below="@id/nam"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/comment_icon"
                />
        </RelativeLayout>

    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/tab"
        app:tabSelectedTextColor="@color/colo_fff"
        android:background="@color/colorAccent"
        app:tabMode="fixed"></android.support.design.widget.TabLayout>
</LinearLayout>